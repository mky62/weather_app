// Get DOM elements
const input = document.getElementById('input-box');
const tempOutput = document.getElementById('temp');
const windOutput = document.getElementById('wind');
const humidityOutput = document.getElementById('humidity');
const iconOutput = document.getElementById('icon'); // Weather icon container

// Listen for Enter key
input.addEventListener('keydown', (event) => {
  if (event.key === 'Enter') {
    const city = input.value.trim();
    if (city) {
      getWeather(city);
    }
  }
});

// Fetch weather data
async function getWeather(city) {
  try {
    const response = await fetch(`${BASE_URL}?q=${city}&appid=${API_KEY}&units=metric`);
    if (!response.ok) throw new Error('City not found');

    const data = await response.json();

    // Update weather info
    cityOutput.textContent = `${data.name}, ${data.sys.country}`;
    tempOutput.textContent = `${Math.round(data.main.temp)} Â°C`;
    windOutput.textContent = `${data.wind.speed} km/h`;
    humidityOutput.textContent = `${data.main.humidity}%`;

    // Show weather icon
    const iconCode = data.weather[0].icon; // e.g. "01d"
    const iconUrl = `https://openweathermap.org/img/wn/${iconCode}@2x.png`;
    iconOutput.innerHTML = `<img src="${iconUrl}" alt="${data.weather[0].description}" />`;

  } catch (error) {
    // Show error and clear values
    cityOutput.textContent = 'City not found';
    tempOutput.textContent = '';
    windOutput.textContent = '';
    humidityOutput.textContent = '';
    iconOutput.innerHTML = '';
  }
}


